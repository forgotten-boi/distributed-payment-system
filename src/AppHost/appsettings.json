{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Aspire.Hosting": "Information"
    }
  },
  // Controls which database engine Aspire provisions as a container and passes to all services.
  // "PostgreSQL"  →  separate postgres container per service  (default, recommended for local dev)
  // "SqlServer"   →  single sqlserver container, one database per service
  // Override for SQL Server:  dotnet run -- --DatabaseProvider SqlServer
  //   or set env var:         DatabaseProvider=SqlServer dotnet run --project src/AppHost
  "DatabaseProvider": "PostgreSQL"
}
