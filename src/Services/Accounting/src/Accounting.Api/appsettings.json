{
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "Database": {
    // Supported values: "PostgreSQL" (default) | "SqlServer"
    // Override via env var:  Database__Provider=SqlServer
    // When running via Aspire, the AppHost propagates DatabaseProvider automatically.
    "Provider": "PostgreSQL"
  },
  "ConnectionStrings": {
    // PostgreSQL — local Docker / Azure Database for PostgreSQL Flexible Server:
    //   "AccountingDb": "Host=<server>.postgres.database.azure.com;Database=accounting_db;Username=<user>;Password=<pwd>;SslMode=Require;"
    // SQL Server — local Docker / Azure SQL Database:
    //   "AccountingDb": "Server=<server>.database.windows.net;Database=accounting_db;Authentication=Active Directory Managed Identity;"
    "AccountingDb": "Host=localhost;Database=accounting_db;Username=postgres;Password=postgres",
    "RabbitMq": "rabbitmq://guest:guest@localhost"
  }
}
